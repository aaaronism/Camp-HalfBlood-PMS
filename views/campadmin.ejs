<div class="welcomeban">
    <h1 class="name">Welcome <%= screenname %>,</h1>
    <h1 class="god">Camp Half Blood</h1>
</div>
<div class="announce">
    <button class="announcebutton" type="button">X</button>
    <button class="addann" type="button">Add New Announcement</button>
</div>
<div class="todo">
    <button class="todobutton" type="button">X</button>
    <a href="/quests/new" class="addquest">
        <button>Add New Quest</button>
    </a>
    <h1>All Quests</h1>
        <ul>
        <% quests.forEach((quest) => { %>
            <li>
                <div class="testing">
                    <a href="/quests/<%=quest.id%>">
                        <button class="questlist">
                            <div>
                                <h2><%= quest.title %></h2>
                                <h3>Completed: <%= quest.complete %></h3>
                            </div>
                        </button>
                    </a>
                    <a href="/quests/<%=quest.id%>/edit">
                        <button>Edit</button>
                    </a>
                    <form action="/quests/<%=quest.id%>?_method=Delete" method="POST">
                        <input type="submit" value="Delete">
                    </form>
                </div>
            </li>
        <% }) %>
        </ul>
    </div>
    <div class="contact">
        <form>
            <button class="contactbutton" type="button">X</button>
            <label for="yourname">Name:</label><br>
            <input type="text" id="iyname" name="iyname"><br>
            <label for="ymessage">Message:</label><br>
            <input type="text" id="iymessage" name="iymessage" style="width: 500px; height: 200px"><br><br>
            <input type="submit" value="Submit">
        </form>
    </div>
